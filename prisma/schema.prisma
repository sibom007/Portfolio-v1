
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model projects {

  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  status projectStatus
  repo projectRepo
  liveLink String
  gitFrontend String
  gitBackend String?
  imageUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum projectStatus {
  WORKING
  DONE
}

enum projectRepo {
  FRONTEND
  BACKEND
}

